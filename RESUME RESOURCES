<script>
  function switchLanguage(lang) {
    const showBM = lang === 'ms';

    // Toggle each section
    document.getElementById("student-bm").style.display = showBM ? "block" : "none";
    document.getElementById("student-en").style.display = showBM ? "none" : "block";

    document.getElementById("worker-bm").style.display = showBM ? "block" : "none";
    document.getElementById("worker-en").style.display = showBM ? "none" : "block";

    document.getElementById("guide-bm").style.display = showBM ? "block" : "none";
    document.getElementById("guide-en").style.display = showBM ? "none" : "block";

    // Optional: Change titles
    document.getElementById("student-title").textContent = showBM ? "üßë‚Äçüéì Contoh Resume Pelajar" : "üßë‚Äçüéì Student Resume Example";
    document.getElementById("worker-title").textContent = showBM ? "üë®‚Äçüíº Contoh Resume Pekerja" : "üë®‚Äçüíº Worker Resume Example";
    document.getElementById("guide-title").textContent = showBM ? "üõ†Ô∏è Panduan Menulis Resume" : "üõ†Ô∏è Resume Writing Guide";
  }
</script>

