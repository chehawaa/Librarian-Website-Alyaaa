  <script>
    const texts = {
      en: {
        title: "ü§ù Mentorship & Events",
        description: `<strong>Explore. Connect. Grow.</strong><br />
          As a student, your path forward starts here. Get matched with mentors who‚Äôve walked your road ‚Äî and want to see you succeed. Join monthly webinars and workshops made for curious minds like yours.`,
        cta: "üöÄ Join an Event",
      },
      id: {
        title: "ü§ù Mentoring & Acara",
        description: `<strong>Jelajahi. Terhubung. Tumbuh.</strong><br />
          Sebagai pelajar, jalanmu ke depan dimulai di sini. Temukan mentor yang pernah melalui jalurmu ‚Äî dan ingin melihatmu sukses. Ikuti webinar dan workshop bulanan yang dibuat untuk pikiran ingin tahu sepertimu.`,
        cta: "üöÄ Ikuti Acara",
      }
    };
<a href="index.html">Home</a>
    const btnEn = document.getElementById("btn-en");
    const btnId = document.getElementById("btn-id");
    const title = document.getElementById("title");
    const description = document.getElementById("description");
    const cta = document.getElementById("cta");

    function setLanguage(lang) {
      title.innerHTML = texts[lang].title;
      description.innerHTML = texts[lang].description;
      cta.textContent = texts[lang].cta;

      if (lang === 'en') {
        btnEn.classList.add('active');
        btnId.classList.remove('active');
      } else {
        btnId.classList.add('active');
        btnEn.classList.remove('active');
      }
    }

    btnEn.addEventListener('click', () => setLanguage('en'));
    btnId.addEventListener('click', () => setLanguage('id'));
  </script>

